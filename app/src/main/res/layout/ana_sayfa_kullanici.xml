<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Profile_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#461414"
    tools:context=".Ana_Sayfa_Kullanici">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="User Ana Sayfa"
            android:textColor="#F2EFEF"
            android:textColorHint="#F8F7F7"
            android:textSize="48sp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="407dp"
            android:layout_height="603dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/kitapara"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buton_sekli"
                android:onClick="btnKitapAra"
                android:text="Kitap Ara"
                android:textSize="24sp"
                tools:ignore="OnClick,UsingOnClickInXml" />

            <Button
                android:id="@+id/kitap_Ekle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buton_sekli"
                android:onClick="kitapekle"
                android:text="Kitap Ekle"
                android:textSize="24sp"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/Okuduklarim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buton_sekli"
                android:onClick="okunmuşkitap"
                android:text="Okuduklarım"
                android:textSize="24sp"
                tools:ignore="UsingOnClickInXml" />

            <Button
                android:id="@+id/Profil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buton_sekli"
                android:onClick="profile"
                android:text="Profilim"
                android:textSize="24sp"
                tools:ignore="OnClick,UsingOnClickInXml" />

            <Button
                android:id="@+id/btncikis"
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:layout_weight="1"
                android:background="@drawable/buton_sekli"
                android:text="Çıkış Yap"
                android:onClick="cikis"
                android:textSize="24sp"
                tools:ignore="OnClick" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
