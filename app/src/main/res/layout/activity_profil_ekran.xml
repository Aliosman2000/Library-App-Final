<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Profile_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#461414"
    tools:context=".Profil_Ekran">



        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="44dp"
            android:text="Profil Sayfa"
            android:textColor="#F2EFEF"
            android:textColorHint="#F8F7F7"
            android:textSize="48sp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
            app:layout_constraintEnd_toStartOf="@+id/imageButton"
            app:layout_constraintHorizontal_bias="0.34"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/profiloncekisayfa"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_marginTop="389dp"
            android:background="@drawable/buton_sekli"
            android:text="Önceki Sayfa"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.948"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.019"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="407dp"
            android:layout_height="500dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="1dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/profiloncekisayfa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButton">

            <EditText
                android:id="@+id/etİsim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:ems="10"
                android:hint="Ad"
                android:inputType="text"
                android:padding="10dp"
                android:textAllCaps="false"
                android:textColorHint="#FDFCFC"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/etSoyad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:ems="10"
                android:paddingLeft="10dp"
                android:hint="Soyad"
                android:inputType="text"
                android:padding="7dp"
                android:textAllCaps="false"
                android:textColorHint="#FDFCFC"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/etEposta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:ems="10"
                android:hint="E-Posta"
                android:inputType="text"
                android:padding="10dp"
                android:textAllCaps="false"
                android:textColorHint="#FDFCFC"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/etKullaniciAdi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:ems="10"
                android:hint="Kullanici Adi"
                android:inputType="text"
                android:padding="10dp"
                android:textAllCaps="false"
                android:textColorHint="#FDFCFC"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/etSifree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:ems="10"
                android:hint="Sifre"
                android:inputType="text"
                android:padding="10dp"
                android:textAllCaps="false"
                android:textColorHint="#FDFCFC"
                android:textSize="24sp" />

        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>